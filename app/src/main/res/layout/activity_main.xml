<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.internetplus.yxy.intelligentspace.MainActivity">


    <RelativeLayout
            android:background="#f9d000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/Logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>
    <RelativeLayout
            android:background="#f9d000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/RoominfomationLabel"
                android:text="管理员"
                android:background="@color/colorwhite"
                android:id="@+id/AdministratorLabel"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
        <Button
                android:text="房间信息"
                android:layout_centerInParent="true"
                android:background="@color/colorwhite"
                android:id="@+id/RoominfomationLabel"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
        <Button
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/RoominfomationLabel"
                android:text="开门"
                android:background="@color/colorwhite"
                android:id="@+id/OpendoorLabel"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
    </RelativeLayout>

    <FrameLayout
            android:id="@+id/FrameFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    </FrameLayout>

</LinearLayout>
